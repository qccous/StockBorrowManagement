@page
@model StockManagement.Pages.Assets.CreateModel


@{
    ViewData["Title"] = "Create Asset";
}
    @if (!string.IsNullOrWhiteSpace(@Model.SuccessMessage))
    {
        <div class="bs-toast toast toast-placement-ex m-2 bg-success bottom-0 end-0 fade show " role="alert" aria-live="assertive" aria-atomic="true" data-delay="2000">
            <div class="toast-header">
                <i class="bx bx-bell me-2"></i>
                <div class="me-auto fw-semibold">Thông báo</div>
                <small>right now</small>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">@Model.SuccessMessage</div>
        </div>
        Model.SuccessMessage = string.Empty;
    }
    @if (!string.IsNullOrWhiteSpace(@Model.FailMessage))
    {
        <div class="bs-toast toast toast-placement-ex m-2 bg-danger bottom-0 end-0 fade show" role="alert" aria-live="assertive" aria-atomic="true" data-delay="2000">
            <div class="toast-header">
                <i class="bx bx-bell me-2"></i>
                <div class="me-auto fw-semibold">Thông báo</div>
                <small>right now</small>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">@Model.FailMessage</div>
        </div>
        Model.FailMessage = string.Empty;
    }
<h1>Create</h1>

<h4> Create Asset</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SelectedAsset.Category!.CategoryName" class="control-label"></label>
                <select asp-for="SelectedAsset.Category!.CategoryName" class ="form-control" asp-items="ViewBag.CategoryName"></select>
            </div>
            <div class="form-group">
                <label asp-for="SelectedAsset.AssetName" class="control-label"></label>
                <input asp-for="SelectedAsset.AssetName" class="form-control" />
                <span asp-validation-for="SelectedAsset.AssetName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedAsset.Image" class="control-label"></label><br />
                <input asp-for="@Model.File" type="file" multiple /><br />
                <span asp-validation-for="SelectedAsset.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedAsset.Specification" class="control-label"></label>
                <input asp-for="SelectedAsset.Specification" class="form-control" />
                <span asp-validation-for="SelectedAsset.Specification" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

 <a asp-page="/Admin/StockBorrowManagement">
        <button class="btn btn-info">Quay lại</button>
    </a>

